@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="py-4">

    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <form method="post">
                        <h3 class="col-12 text-success text-center py-4">
                            @if (User.IsInRole(WebConstance.AdminRole))
                            {
                                <strong>Register an Admin Account</strong>
                            }
                            else
                            {
                                <strong>Register</strong>
                            }
                        </h3>
                        <hr/>
                        <div class="py-2">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input asp-for="FullName" placeholder="Name" type="text" class="form-control"/>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="Username" placeholder="Username" type="text" class="form-control"/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="py-2">
                            <input asp-for="Email" placeholder="Email" type="email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="py-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">+963</span>
                                </div>
                                <input asp-for="PhoneNumber" placeholder="Phone Number" type="text" class="form-control"/>
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="City" placeholder="City" type="text" class="form-control"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            <input asp-for="Area" placeholder="Area" type="text" class="form-control"/>
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>


                        <div class="py-2">
                            <input asp-for="StreetAddress"placeholder="Street Address" type="text" class="form-control"/>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="form-row row py-2">
                            <div class="col-6">
                                <input asp-for="Password" placeholder="Password" type="password" class="form-control"/>
                            </div>
                            <div class="col-6">
                                <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" class="form-control"/>

                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="py-2">
                            @if (User.IsInRole(WebConstance.AdminRole))
                            {
                                <button type="submit" class="btn btn-warning form-control">Register Admin User</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Register</button>
                            }
                        </div>
                        <div class="py-2 text-center">

                            <h6 >OR</h6>
                        </div>
                        <div class="py-2">

                            <a asp-action="Login" class="btn btn-outline-success form-control">Login</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}