@model UpdateInfoVM
@{
    ViewData["Title"] = "Account";
    Layout = "_Layout";
}


<div class="py-4">
    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <form method="post">
                        <h3 class="col-12 text-success text-center py-4">
                            <input asp-for="Id" hidden>
                            <input asp-for="Username" hidden>

                            <strong>Update Personal Profile</strong>

                        </h3>
                        <hr/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group  py-2">
                            <div >
                                <label asp-for="Username"></label>
                            </div>
                            <div>
                                <input asp-for="Username" disabled class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group  py-2">
                            <div >
                                <label asp-for="FullName"></label>
                            </div>
                            <div>
                                <input asp-for="FullName" placeholder="Name" class="form-control"/>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group py-2">
                            <label asp-for="City"></label>
                            <input asp-for="City" placeholder="City" type="text" class="form-control"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group py-2">
                            <label asp-for="Area"></label>
                            <input asp-for="Area" placeholder="Area" type="text" class="form-control"/>
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>

                        <div class="form-group py-2">
                            <label asp-for="StreetAddress"></label>
                            <input asp-for="StreetAddress" placeholder="Street Address" type="text" class="form-control"/>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>


                        <div class=" py-2">
                            <button type="submit" class="btn btn-outline-primary form-control">Update</button>
                        </div>
                        <div class=" py-2">

                            <a asp-action="ChangePassword" class="btn btn-outline-info form-control">Change Password</a>
                        </div>
                        <div class=" py-2">

                            <a asp-action="ChangeEmail" class="btn btn-outline-warning form-control">Change Email</a>
                        </div>

                        <div class="py-2 text-center">

                            <h6 >OR</h6>
                        </div>
                        <div class="py-2">

                            <button asp-controller="Home" asp-action="Index" class="btn btn-outline-success form-control">Back to shopping</button>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}