@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<div class="py-4">

    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <form method="post">
                        <h3 class="col-12 text-success text-center py-4">

                            <strong>Login</strong>

                        </h3>
                        <hr/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <div class="py-2">
                            <input asp-for="Email" placeholder="Email" type="email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>


                        <div class="py-2">

                            <input asp-for="Password" placeholder="Password" type="password" class="form-control"/>

                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe"/>
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="py-2">

                            <button asp-action="Login" type="submit" class="btn btn-primary form-control">Login</button>

                        </div>
                        <div class="py-2">

                            <a asp-action="ForgotPassword" class="btn btn-outline-secondary form-control">Forgot Password</a>

                        </div>
                        <div class="py-2 text-center">

                            <h6 >OR</h6>
                        </div>
                        <div class="py-2">

                            <a asp-action="Register" class="btn btn-outline-success form-control">Rigester</a>

                        </div>
                    </form>
                 
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}