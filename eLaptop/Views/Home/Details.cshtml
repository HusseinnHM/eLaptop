
@model HomeDetailsVM


@{
    ViewData["Title"] = "Laptop Details";
}

<div class="container">
    
        <div class="container  pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning"> @((Model.Price).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ImageUrl" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border text-dark" style="background-color:lavenderblush">@Model.Company.Name</span>
                                        <span class="badge p-3 border text-dark" style="background-color:azure">@Model.ProductType.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Description) </p>
                                    </div>
                            
                                        <div class="col-12">
                                        </div>
                                        <div class="col-4 pr-5">
                                        
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer ">
                    <div class="row  text-right" style="justify-content:flex-end" >
                        <div class="col-6 col-md-3 pb-1 " >
                            <a asp-action="Index" class="btn btn btn-outline-primary  form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-6 col-md-3 " >
                         

                                <a  asp-action="AddItemToShoppingCart" asp-route-id="@Model.ProductId" class="btn btn-success  form-control btn-lg" style="height:50px;">Add to Cart</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
  
</div>

