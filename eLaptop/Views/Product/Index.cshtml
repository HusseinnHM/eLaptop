@model IList<ProductIndexVM>
@{
    ViewData["Title"] = "Products";
}

<div class="container p-3 ">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Laptop List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                 <i class="bi bi-plus-circle"></i> &nbsp; Create New laptop
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Laptop Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Company
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var laptop in Model)
                {
                <tr>
                    <td width="30%">@laptop.Name</td>
                    <td width="10%">@laptop.Price</td>
                    <td width="10%">@laptop.Company.Name</td>
                    <td width="10%">@laptop.Quantity</td>
                    <td width="10%">@laptop.ProductType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@laptop.ProductId" asp-action="Upsert" class="btn btn-primary mx-2">
                               <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-route-Id="@laptop.ProductId" asp-action="Delete" class="btn btn-danger mx-2">
                               <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product exists.</p>
    }

</div>


