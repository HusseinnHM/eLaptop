@model IList<eLaptop.ViewModels.ProductTypeVM>
@{
    ViewData["Title"] = "Product Types";
}
<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product Types List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Product Type
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var productType in Model)
                {
                <tr>
                    <td width="50%">@productType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@productType.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                              <i class="bi bi-pencil-square"></i>
                            </a>
                            <a  asp-route-Id="@productType.Id" asp-action="Delete" class="btn btn-danger mx-2">
                             <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product types exists.</p>
    }

</div>

